.messages{ "data-message-id": "#{message.id}" }
 .messages__name
  = message.user.name
 .messages__time
  = message.created_at.strftime("%Y年%m月%d日 %H:%M")
 .messages__text
  - if message.body.present?
   %p.messages__text__body
    = message.body
  = image_tag message.image.url, class: 'lower-message__image' if message.image.present?
